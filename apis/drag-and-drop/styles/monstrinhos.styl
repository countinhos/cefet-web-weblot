html, body
  height 100%

body
  margin: 0
  display flex
  align-items center
  background-color cornflowerblue
  background-image linear-gradient(to bottom right, cornflowerblue, darken(cornflowerblue, 70%))
  font-family 'Overlock', sans-serif

h1
  font-family 'Chewy', serif
  font-size 3em
  color #9E1010
  background-image -webkit-linear-gradient(#9E1010, #295AC7)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
  -webkit-text-stroke 1px black
  line-height 0.75em
  height 1.25em
  padding 0.15em 0 0.25em

#dnd-example-container
  display block
  width 100%
  text-align center

.anim-dashes
  background-color silver
  background-image repeating-linear-gradient(45deg, transparent, transparent 10px, #ffffff 10px, #ffffff 20px)
  width 392px
  margin-left auto
  margin-right auto
  padding 2px
  border-radius 5px

@media (max-width: 400px)
  .anim-dashes
    width calc(100% - 4px)

.anim-dashes-blank
  background-color white
  border-radius 5px
  width 100%
  height 100%

@keyframes dashes
  from
    background-position: 0 0
  to
    background-position: 196px 0


#dnd-target
  height 200px
  margin auto
  position relative
  opacity .6
  transition all 200ms
  &.dnd-over
    animation dashes 5s linear infinite
    border-color red
    background-color: red
    opacity .9

#dnd-sources
  display block
  & > ul
    width 80%
    margin 2em auto
    padding 0
    display flex
    justify-content space-around
  & > ul li
    display inline-block

.dnd-draggable
  width 64px
  height 64px
  text-indent -9999px
  overflow hidden
  cursor move
  user-select none

  &#johnny
    background-image url(../images/toshl-johnny.png)
  &#dmitry
    background-image url(../images/toshl-dmitry.png)
  &#ales
    background-image url(../images/toshl-ales.png)
  &#andraz
    background-image url(../images/toshl-andraz.png)
  &#logar
    background-image url(../images/toshl-logar.png)

  &.dnd-destroying
    position absolute
    top 50%
    margin-top -32px
    left 50%
    margin-left -32px
    animation dying 2s, reappearing 400ms cubic-bezier(0,.97,.51,1.3) 2s

    &:nth-child(2)
      left calc(50% - 160px)
    &:nth-child(3)
      left calc(50% - 80px)
    &:nth-child(4)
      left 50%
    &:nth-child(5)
      left calc(50% + 80px)
    &:nth-child(6)
      left calc(50% + 160px)

@keyframes dying
  from
    transform none
  to
    transform scale(.3) rotate(1080deg)
    opacity 0

@keyframes reappearing
  from
    transform scale(0.3)
  to
    transform scale(1.0)
